procedure findme
  put ".tumble nemo"
   waitfor "you n","you s","you e","you w"," you ne","you se","you nw","you sw",3
    switch found   
     case 1: put "south"
             delay 10
     case 2: put "north"
             delay 10
     case 3: put "west"
             delay 10
     case 4: put "east"
             delay 10
     case 5: put "southwest"
             delay 10
     case 6: put "northwest"
             delay 10
     case 7: put "southeast"
             delay 10
     case 8: put "northeast"
             delay 10
    endswitch
endproc

Procedure M String Dir, Place
  Integer OK, Xit
    xit = 0
    ok = 0
    Repeat
      Put Dir
        Waitfor Place, "fall!","no exit",1
          Switch Found
            Case 1 : 
                     OK = 1  
                     check=check+1
            Case 2 : delay 10
                     OK = 0
            Case 3 : ok=0
                     Xit =xit+1
                     findme
          EndSwitch
          If Xit = 4
            GetOut "You're Lost! <Hanging Up>"
          endif
          until OK = 1
  soulcheck                     
    if check=5
    healthcheck                    
    check=0    
    endif
    montest                   

EndProc



endproc
                  
procedure Healthcheck
        integer getit,vit
        string vital,endvital
        vital="none"
        endvital="none"
        position=0   
        move=1
        getit=0
        vit=0
          put "he"
          waitfor "/ 10","/ 11",2 ;CURRENT MANA PUT HERE
          if found
          get vital
          strpos vital,"/",position
          getit=(position-5)
          substr vital,getit,4,endvital
          atoi endvital,vit
          print "Health is: ", vit
          if vit < 1600 and vit >= 900  ;RANGE OF HEALTH TO HEAL
                 gimotu          
          elseif vit <= 899 and vit > 0   ;HANGUP IF HEALTH IS BELOW THIS
           ;GetOut "Health Exremely Low!"
          elseif vit <= 0                ;REMEMBER: ALL NUMBERS NEED TO MATCH
            print "Bad Healthcheck!"     
          endif
        endif
endproc
       

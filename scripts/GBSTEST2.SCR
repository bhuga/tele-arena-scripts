procedure newloop
integer doit
time current
difftime start,current,doit
minutes=doit/60
put "-",iter," loops so far in ",minutes,"."
put "-I have killed ",moba," spirit's ",mobb," skeleton's ",mobc," chieftan's and last but not least ",mobd," minotaur's"
delay 30
put
iter=iter+1
put "prev"
return
endproc

procedure gohome
forward=""
   repeat
    substr flee,fleeroom,1,mover
     switch mover 
        case "n","s","e","w","u","d": forward=mover
        case "1": forward="nw"
        case "2": forward="ne"
        case "3": forward="se"
        case "4": forward="sw"
        case "z": forward="z"
                  put "x"
                  waitfor "[MAJORMUD]",15
                  hangup
                  safe=1
                  stop
        case "p": forward="go path"
        case "5": forward=""
                  bash "n"
        case "6": forward=""
                  bash "e"
        case "7": forward=""
                  bash "s"
        case "8": forward=""
                  bash "w"        
        case "c":forward=""
                 put "close e"  
      endswitch
     put forward
     delay 9
     fleeroom=fleeroom+1
   until safe=1
endproc

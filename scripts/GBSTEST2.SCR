procedure move
;print "^Mmove proc"
  substr path,room,1,mover
     switch mover 
        case "n","s","e","w","u","d": forward=mover
        case "1": forward="nw"
        case "2": forward="ne"
        case "3": forward="se"
        case "4": forward="sw"
        case "l": forward="l"
        case "z": forward="z"
        case "a": forward="a"            
        case "h": forward=""
                  chkbls
        case "5": forward=""
                  bash "n"
        case "6": forward=""
                  bash "e"
        case "7": forward=""
                  bash "s"
        case "8": forward=""
                  bash "w"                          
        case "m": forward=""
                  gmon        
        endswitch
   if attacked = 1
     runner
   elseif forward="l"
     xpstyle=2
     chkexp        
     room=room+1
   elseif forward="a"
     newloop
     room=room+1
   elseif forward="z"
     room=1
     return   
   else
     if needrest = 0
     sneak
     endif
     put forward 
     mobtest
     if fought=1
      getstats
      health
      if needrest=0
      mana
      endif
      room=room+1
      fought=0
     else
     room=room+1
    endif
   endif
endproc

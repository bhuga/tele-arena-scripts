procedure cure                                                         
put "cure"
   waitfor "you cast","but fail","enough mana",8
    switch found
        case 1: put "rest"
                return
        case 2: delay 50
                cure
                return
        case 3: put "sigh"
                delay 30
                cure
    endswitch
endproc
;----------------------------------------------------------------------
procedure rester
;print "^Mresting procedure"
string health1
 put "rest"
needrest=1
   waitfor "(resting)","too sick",8
     switch found
        case 1: put "smile"
        case 2: cure
     endswitch
    repeat
     waitfor ft,mta,yf,ay,sr,sc,sl,sb,su,ss,sp,14
        switch found
           case 1,3,4: return
           case 2,5,6,7,8,9,10,11: attacked=1
                     return
           endswitch
       getstats
        Substr manahpstr, 18, 3,health1
    until health1="100"
  needrest=0
 return
endproc

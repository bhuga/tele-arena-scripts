Procedure Healthcheck

        Integer getit,vit
        String vital,endvital
        vital="none"
        endvital="none"
        position=0
        getit=0
        vit=0
          Put "He"
          Waitfor "/ 10",2 ;CURRENT MANA PUT HERE
          If Found
          get vital
          strpos vital,"/",position
          getit=(position-5)
          substr vital,getit,5,endvital
          atoi endvital,vit
          print "Health is: ", vit   
          If Vit <= 1788 and vit >= 1500
              ; kusatami ;Tami = 1
          elseif vit < 1500 and vit >= 401
                Kusamotu
          elseif vit <= 400 and vit > 1
                Retreat                
          elseif vit = 1
                Kusamotu
          elseif vit <= 0                
            Print "Bad Healthcheck, Retrying."    
          EndIf
        EndIf

EndProc

Procedure LeaveKusa
  
god = 0

Repeat

 Integer getit,vit
 String vital,endvital
  vital="none"
  endvital="none"
  position=0
  getit=0
  vit=0
  Put "He"
  Waitfor "/ 10",3 ;CURRENT MANA PUT HERE
  If Found
  get vital
  strpos vital,"/",position
  getit=(position-5)
  substr vital,getit,4,endvital
  atoi endvital,vit
  print "Health is: ", vit
  If Vit >= 1670
   Print "At Full Health, returning to Arena"
   god = 1 
  elseif Vit < 1469 and Vit > 0
    Put "C Kusamotu nemo"
    Delay 15
  elseif vit <= 0                
   Print "Bad Healthcheck, Retrying."    
   Delay 15 
   Put "^M~~^M"
   EndIf
 EndIf

Until god = 1

Soulcheck

  m "ne","arena."

Soulcheck

EndProc
